<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:b="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http>
        <intercept-url pattern="/site/**" access="ROLE_ADMINISTRADOR" />
        <intercept-url pattern="/site/acessoServidor/**" access="ROLE_SERVIDOR" />
        <intercept-url pattern="/site/acessoAluno/**" access="ROLE_ALUNO" />
    
        <form-login login-page="/index.jsf" always-use-default-target="true" 
            default-target-url="/login/principal.jsf"
            authentication-failure-url="/index.jsf?login_error=1" />
        <logout />
    </http>

    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"                   
                users-by-username-query=
                    "SELECT login, senha, ativo, email, apelido
                    FROM usuario 
                    WHERE login = ?"
                authorities-by-username-query=
                    "SELECT u.login, p.permissao
                     FROM usuario u, usuario_permissao p
                     WHERE p.id_usuario = u.id
                     AND login = ?" />
        </authentication-provider>
    </authentication-manager>
</b:beans>
